<%= error_messages_for 'page' %>

<div class='editor-right'>
  <div class='well'>
    <h4><%= _("Publish settings")%></h4>
    <ul class='inputs-list'>
      <li>
        <label for="page_published">
          <%= check_box 'page', 'published'  %>
          <%= _("Online")%>
        </label>
      </li>
    </ul>
    <div class='actions'>
      <%= save( _("Publish")) %>
    </div>
  </div>
</div>

<div class='editor-left'>
  <p class='input_text'>
    <%= text_field 'page', 'title', :class => 'span1', :style => ' width: 99%', :placeholder => _('Title')  %>
  </p>

  <%= render('images', { :images => @images}) unless @images.empty? %>

  <div id='editor'>
    <%= render 'admin/shared/markdown_editor',
        object_name: 'page',
        field_name: 'body',
        content: @page&.body || '',
        text_filter: @page&.text_filter || 'markdown',
        show_more_button: false %>
  </div>

  <div class='separator'>
    <h4><%= _("Page settings") %></h4>
      <div class='clearfix'>
        <label for="page_name"><%= _("Permanent link")%></label>
        <div class='input'>
          <%= text_field 'page', 'name', :class => 'span5' %>
        </div>
      </div>
      <div class='clearfix'>
        <label for="page_redirect_url"><%= _("External redirect URL")%></label>
        <div class='input'>
          <%= text_field 'page', 'redirect_url', :class => 'span5', :placeholder => 'https://example.com' %>
          <span class='help-block'><%= _("If set, this page will redirect to the specified URL instead of displaying content.")%></span>
        </div>
      </div>
      <div class='clearfix'>
        <label for="text_filter"><%= _("Article filter")%></label>
        <div class='input'>
          <select name="page[text_filter]" id="text_filter">
            <%= options_for_select text_filter_options, @page.text_filter %>
          </select>
        </div>
      </div>
    </div>
</div>
