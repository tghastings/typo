<div id="active_<%= active.html_id %>" class='alert-message block-message info'>
  <h3 class='light'><%= active.display_name %></h3>
  <div class='widget-content'>
    <p><%= active.description %></p>
      <div><% active.class.fields.each do |row| -%>
        <%= row.line_html(active) %>
        <% end -%>
      </div>
      <%= link_to 'remove',
        { action: 'remove', id: active.id, element: "active_#{active.html_id}" },
        remote: true,
        data: { type: 'script' },
        onclick: "$('#active_#{active.html_id}').fadeOut(); $('#update_spinner').show();" %>
  </div>
</div>
