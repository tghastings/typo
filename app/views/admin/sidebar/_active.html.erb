<div id="active_<%= active.html_id %>" class='alert-message block-message info sidebar-item'>
  <h3 class='light'><%= active.display_name %></h3>
  <div class='widget-content'>
    <p><%= active.description %></p>
      <div><% active.class.fields.each do |row| -%>
        <%= raw row.line_html(active) %>
        <% end -%>
      </div>
      <%= link_to 'remove',
        { action: 'remove', id: active.id, element: "active_#{active.html_id}" },
        data: { turbo: false },
        onclick: "document.getElementById('active_#{active.html_id}').style.display='none'; document.getElementById('update_spinner').style.display='inline'; fetch('#{url_for(action: 'remove', id: active.id, element: "active_#{active.html_id}")}', {method: 'DELETE', headers: {'X-CSRF-Token': document.querySelector('[name=csrf-token]').content}}); return false;" %>
  </div>
</div>
