<div id='content-<%= article.id %>'>
  <p>This post is password protected. Please fill in your password or login to view the content</p>
  <%= form_for(:article, url: { controller: 'articles', action: 'check_password' },
               remote: true, html: { 'data-type': 'script', 'data-update': "content-#{article.id}" }) do |f| %>
    <%= password_field(:article, :password) %>
    <input type='hidden' name='article[id]' value='<%= article.id %>' />
    <%= submit_tag(_('Submit') + '!', data: { remote: true, type: 'script', update: "content-#{article.id}" }) %>
  <% end %>
</div>
