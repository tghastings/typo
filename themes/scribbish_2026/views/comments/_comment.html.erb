<li class="comment" id="comment-<%= comment.id %>">
  <div class="author">
    <%= avatar_tag(:email => comment.email, :url => comment.url) %>
    <div>
      <cite><%= (comment.url.blank?) ? h(comment.author) : link_to(h(comment.author), comment.url, rel: "nofollow noopener").nofollowify %></cite>
      <abbr title="<%= comment.created_at.xmlschema %>">
        <time datetime="<%= comment.created_at.iso8601 %>"><%= display_date_and_time comment.created_at %></time>
      </abbr>
    </div>
  </div>
  <div class="content">
    <%= comment.html %>
  </div>
  <% unless comment.published -%>
  <div class="spamwarning"><%= _("This comment has been flagged for moderator approval.") %></div>
  <% end -%>
</li>
